{
  "name": "e-voting-system",
  "version": "1.0.0",
  "description": "E-Voting System with comprehensive test coverage",
  "main": "index.js",
  "scripts": {
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:ci": "jest --config tests/jest.config.js --coverage --watchAll=false --ci",
    "test:backend": "jest --config tests/jest.config.js --selectProjects backend",
    "test:react-native": "jest --config tests/jest.config.js --selectProjects react-native",
    "test:react-web": "jest --config tests/jest.config.js --selectProjects react-web",
    "test:backend:coverage": "jest --config tests/jest.config.js --selectProjects backend --coverage",
    "test:react-native:coverage": "jest --config tests/jest.config.js --selectProjects react-native --coverage",
    "test:react-web:coverage": "jest --config tests/jest.config.js --selectProjects react-web --coverage",
    "clean:coverage": "rm -rf coverage && find . -name 'coverage' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:node-modules": "find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true"
  },
  "keywords": [
    "e-voting",
    "blockchain",
    "security",
    "testing",
    "jest"
  ],
  "author": "E-Voting Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@babel/preset-typescript": "^7.18.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "babel-jest": "^29.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "projects": ["<rootDir>/tests/jest.config.js"]
  }
}