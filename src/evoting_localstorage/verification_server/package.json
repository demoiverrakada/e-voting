{
  "name": "verification_server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --config ../../../tests/jest.config.js --selectProjects backend",
    "test:watch": "jest --config ../../../tests/jest.config.js --selectProjects backend --watch",
    "test:coverage": "jest --config ../../../tests/jest.config.js --selectProjects backend --coverage",
    "test:ci": "jest --config ../../../tests/jest.config.js --selectProjects backend --coverage --watchAll=false"
  },
  "author": "RDT",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "body-parser": "^1.20.3",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "fs": "^0.0.1-security",
    "json-bigint": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/__tests__/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
